<% layout('/layout/main') -%>

<div class="col-lg-10 col-md-9">


    <div class="panel panel-default">
        <div class="panel-body">
            <div class="pull-left"><h2>Tanuló csoportok</h2></div>
            <div class="pull-right">
                <div class="btn-group">
                    <button type="button" class="btn btn-success btn-filter" data-target="pagado">Jövőbeli</button>
                    <button type="button" class="btn btn-warning btn-filter" data-target="pendiente">Megkezdett</button>
                    <button type="button" class="btn btn-danger btn-filter" data-target="cancelado">Befejezett</button>
                    <button type="button" class="btn btn-default btn-filter" data-target="all">Mind</button>
                </div>
            </div>

            <form class="" action="/csoport/join" method="post">
                <div class="table-container">

                    <table class="table table-filter">
                        <tbody>
                        <% groups.forEach(function(group) { %>
                        <tr data-status="pagado">
                            <td>
                                <div class="media">

                                    <div class="media-body">
                                        <span class="media-meta pull-right"><%= group.startDate %>
                                            - <%= group.endDate %></span>
                                        <h4 class="title">
                                            <a href="/csoport/nezet/<%= group.id %>"><%= group.name %></a>
                                            <span class="pull-right pagado">(Jövőbeli)</span>
                                        </h4>
                                        <p class="summary"><%= group.description %></p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% }); %>

                        </tbody>
                    </table>
                </div>
                <div class="pull-left">
                    <button type="submit" class="btn btn-primary">Csatlakozok a csoporthoz</button>
                </div>

            </form>
            <div class="pull-right">
                <a href="/csoport/uj" class="btn btn-success">Új csoport létrehozása</a>
            </div>
        </div>
    </div>
</div>

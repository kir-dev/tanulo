<% layout('../../layout/main') -%>

<div class="col-lg-10 col-md-9">

    <div class="panel panel-default">
        <div class="panel-body">
            <h2><%= group.name %></h2>
            <div class="col-md-6">
                <span class="text-muted"><%=  moment(group.startDate).format( 'MMM-DD-YYYY HH:MM') %> - <%=  moment(group.endDate).format( 'MMM-DD-YYYY HH:MM') %></span>
                <p class="summary"><%= group.description %></p>
            </div>
            <form method="post" action="/csoportok/<%= group.id %>/csatlakozas">
                <div class="pull-right">
                    <button type="submit" class="btn btn-success">Csatlakozok a csoporthoz</button>
                </div>
            </form>>

            <div class="col-md-6">
                <h3>Résztvevők</h3>
                <ul class="list-group">
                    <% group.users.forEach(function (user) { %>
                    <li class="list-group-item"><a href="/felhasznalo/profil/<%= user.id %>"><%= user.name %></a></li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>

</div>

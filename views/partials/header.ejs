<!DOCTYPE html>
<html lang="en">
<head>
  <title></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">

  <link rel="stylesheet" href="/stylesheets/style.css"  title="no title" charset="utf-8">
</head>

<body>

    <div class="container">
        <h1></h1>
        <p class="lead">Közös tanuláshoz partnerkeresést segítő alkalmazás.<p>
    </div>

    <div class="container">
      <div class="row">
        <section class="content">
          <div class="col-lg-2 col-md-3">

          <div class="profile-sidebar">
            <!-- SIDEBAR USERPIC -->
            <div class="row">
            <div class="profile-userpic col-xs-offset-3 col-xs-6 col-sm-offset-4 col-sm-4 col-md-offset-0 col-md-12">
              <img src="https://s3.amazonaws.com/uifaces/faces/twitter/fffabs/128.jpg" class="img-responsive" alt="">
            </div>
            </div>
            <!-- END SIDEBAR USERPIC -->
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
              <div class="profile-usertitle-name">
                <%= userData.displayName %>
              </div>
              <div class="profile-usertitle-job">
                <%= userData.roomNumber %>
              </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
              <ul class="nav">
                <li class="<% if(active=='csoport'){ %> active <% } %>">
                  <a href="/csoport/lista">
                  <i class="glyphicon glyphicon-home"></i>
                  Kezdőlap </a>
                </li>
                  <li class="<% if(active=='elozmenyek'){ %> active <% } %>">
                  <a href="/elozmenyek/lista">
                  <i class="glyphicon glyphicon-calendar"></i>
                  Előzményeim </a>
                </li>
                  <li class="<% if(active=='beallitasok'){ %> active <% } %>">
                  <a href="/beallitasok/profil">
                  <i class="glyphicon glyphicon-user"></i>
                  Beállítások </a>
                </li>
                <li>
                  <a href="/auth/logout">
                  <i class="glyphicon glyphicon-log-out"></i>
                  Kijelentkezés </a>
                </li>
                  <li class="<% if(active=='help'){ %> active <% } %>">
                  <a href="/help/sugo">
                  <i class="glyphicon glyphicon-question-sign"></i>
                  Sugó </a>
                </li>
              </ul>
            </div>
            <!-- END MENU -->
          </div>
          <br>
          </div>

